<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UbicacionMaestra"
        tools:targetApi="31">

        <service
            android:name=".Firstapp.ui.UbicacionGuardarService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="location"
            tools:ignore="ForegroundServicePermission" />

        <activity
            android:name=".Firstapp.ui.ConsultAppR"
            android:exported="false" />
        <activity
            android:name=".Firstapp.ui.SaveUbicacionReal"
            android:exported="false" />
        <activity
            android:name=".Firstapp.ui.ConsultarUbicacionReal"
            android:exported="false" />
        <activity
            android:name=".Firstapp.ui.MenuPrincipalActivity"
            android:exported="false" />
        <activity
            android:name=".Firstapp.ui.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".Firstapp.ui.AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Firstapp.ui.MainActivity2"
            android:exported="false"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.UbicacionMaestra.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_api_key" />

        <activity
            android:name=".Firstapp.ui.MainActivity"
            android:exported="true" />
    </application>

</manifest>